}

model TraineeFollowUp {
  id           String             @id @default(cuid())
  title        String             @default("CI.DES TRAINEE FOLLOW UP FORM")
  codeNumber   String             @default("ENR-CIFRA-FORM 004")
  revision     String             @default("01")
  creationDate DateTime           @default(now())
